{
  "name": "mhe-unification-pack",
  "version": "2.0.0",
  "description": "SafeExec â†” Desktop Commander Unification Pack v2 - Standardized configuration, monitoring, and testing",
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "version:sync": "node tools/scripts/operational/version-sync.mjs",
    "version:check": "node tools/scripts/operational/version-sync.mjs --check",
    "env:validate": "node tools/deployment/ops/env-validate.mjs",
    "env:check": "node tools/deployment/ops/env-validate.mjs --verbose",
    "policy:validate": "node tools/security/policy-lock.mjs validate",
    "policy:update": "node tools/security/policy-lock.mjs update",
    "policy:status": "node tools/security/policy-lock.mjs status",
    "policy:strict": "POLICY_STRICT_MODE=true node tools/security/policy-lock.mjs validate",
    "monitor:start": "node tools/deployment/ops/monitor.mjs",
    "monitor:logs": "node tools/deployment/ops/monitor.mjs --tail-only",
    "test:integration": "node tests/legacy/integration.spec.mjs",
    "test:roles": "node tests/legacy/roles-matrix.spec.mjs",
    "test:all": "npm run test:integration && npm run test:roles",
    "test:watch": "nodemon --watch tests --watch services/mcp --exec \"npm run test:all\"",
    "test:react": "jest",
    "test:react:watch": "jest --watch",
    "test:react:coverage": "jest --coverage",
    "test:react:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest components/__tests__/",
    "test:react:integration": "jest __tests__/",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "dev": "webpack serve --mode development",
    "type-check": "tsc --noEmit",
    "safeexec:start": "cd services/mcp/components/safe-exec && node server.mjs",
    "safeexec:dev": "cd services/mcp/components/safe-exec && nodemon server.mjs",
    "dc:validate": "node tools/scripts/operational/dc-input-validate.mjs",
    "precommit": "npm run version:sync && npm run env:validate && npm run policy:validate",
    "ci:validate": "npm run version:check && npm run env:check && npm run policy:strict && npm run test:all",
    "setup": "npm run version:sync && npm run env:validate && npm run policy:update",
    "health": "npm run version:check && npm run env:check && npm run policy:status"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "babel-jest": "^29.6.1",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "identity-obj-proxy": "^3.0.0",
    "jest-transform-stub": "^2.0.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-bundle-analyzer": "^4.9.0",
    "html-webpack-plugin": "^5.5.3",
    "ts-loader": "^9.4.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "compression-webpack-plugin": "^10.0.0"
  },
  "keywords": [
    "safeexec",
    "desktop-commander",
    "mcp",
    "security",
    "policy",
    "monitoring",
    "validation"
  ],
  "author": "MHE Unification Pack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "file://./"
  },
  "config": {
    "safeexec": {
      "defaultRole": "builder",
      "policyPath": "./mcp/safe-exec/policy.json",
      "logLevel": "info"
    },
    "monitoring": {
      "logRetention": "7d",
      "alertThreshold": "error"
    },
    "validation": {
      "strictMode": false,
      "autoFix": true
    }
  },
  "files": [
    "scripts/",
    "ops/",
    "test/",
    "mcp/",
    "policy-lock.mjs",
    ".nvmrc",
    ".tool-versions"
  ]
}